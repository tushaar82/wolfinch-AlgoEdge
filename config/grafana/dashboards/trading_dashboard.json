{
  "dashboard": {
    "id": null,
    "uid": "wolfinch-trading",
    "title": "Wolfinch Trading Dashboard",
    "tags": ["wolfinch", "trading"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "type": "stat",
        "title": "Account Balance",
        "targets": [
          {
            "expr": "wolfinch_account_balance",
            "refId": "A",
            "legendFormat": "{{exchange}} - {{currency}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 2
          }
        }
      },
      {
        "id": 2,
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "type": "stat",
        "title": "Total P&L Today",
        "targets": [
          {
            "expr": "sum(increase(wolfinch_trade_pnl_sum[24h]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "red"},
                {"value": 0, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "type": "stat",
        "title": "Open Positions",
        "targets": [
          {
            "expr": "sum(wolfinch_positions_open)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 0
          }
        }
      },
      {
        "id": 4,
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "type": "gauge",
        "title": "Win Rate",
        "targets": [
          {
            "expr": "avg(wolfinch_win_rate)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 0.4, "color": "yellow"},
                {"value": 0.6, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "type": "timeseries",
        "title": "Orders Per Minute",
        "targets": [
          {
            "expr": "rate(wolfinch_orders_total[1m]) * 60",
            "refId": "A",
            "legendFormat": "{{exchange}} - {{symbol}} - {{side}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 6,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "type": "piechart",
        "title": "Order Status Distribution",
        "targets": [
          {
            "expr": "sum by (status) (wolfinch_orders_total)",
            "refId": "A",
            "legendFormat": "{{status}}"
          }
        ]
      },
      {
        "id": 7,
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 12},
        "type": "timeseries",
        "title": "Cumulative P&L",
        "targets": [
          {
            "expr": "sum(wolfinch_realized_pnl)",
            "refId": "A",
            "legendFormat": "{{strategy}} - {{symbol}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 20
            }
          }
        }
      },
      {
        "id": 8,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "type": "histogram",
        "title": "P&L Distribution",
        "targets": [
          {
            "expr": "wolfinch_trade_pnl_bucket",
            "refId": "A",
            "format": "heatmap"
          }
        ]
      },
      {
        "id": 9,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
        "type": "timeseries",
        "title": "Market Price",
        "targets": [
          {
            "expr": "wolfinch_market_price",
            "refId": "A",
            "legendFormat": "{{exchange}} - {{symbol}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth"
            }
          }
        }
      },
      {
        "id": 10,
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 28},
        "type": "table",
        "title": "Open Positions",
        "targets": [
          {
            "expr": "wolfinch_positions_open > 0",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "indexByName": {},
              "renameByName": {
                "exchange": "Exchange",
                "symbol": "Symbol",
                "strategy": "Strategy",
                "Value": "Count"
              }
            }
          }
        ]
      }
    ]
  },
  "overwrite": true
}
