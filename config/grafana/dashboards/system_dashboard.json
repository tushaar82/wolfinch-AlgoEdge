{
  "dashboard": {
    "id": null,
    "uid": "wolfinch-system",
    "title": "Wolfinch System Health Dashboard",
    "tags": ["wolfinch", "system", "infrastructure"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "type": "stat",
        "title": "Redis Status",
        "targets": [
          {
            "expr": "up{job=\"redis-exporter\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "value": "0", "text": "DOWN"},
              {"type": "value", "value": "1", "text": "UP"}
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "type": "stat",
        "title": "PostgreSQL Status",
        "targets": [
          {
            "expr": "up{job=\"postgres-exporter\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "value": "0", "text": "DOWN"},
              {"type": "value", "value": "1", "text": "UP"}
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "type": "stat",
        "title": "Wolfinch App Status",
        "targets": [
          {
            "expr": "up{job=\"wolfinch-app\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "value": "0", "text": "DOWN"},
              {"type": "value", "value": "1", "text": "UP"}
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "type": "stat",
        "title": "Active Alerts",
        "targets": [
          {
            "expr": "count(ALERTS{alertstate=\"firing\"})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "type": "timeseries",
        "title": "API Requests by Exchange",
        "targets": [
          {
            "expr": "rate(wolfinch_api_requests_total[5m])",
            "refId": "A",
            "legendFormat": "{{exchange}} - {{endpoint}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 6,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "type": "timeseries",
        "title": "API Latency (95th percentile)",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(wolfinch_api_request_duration_seconds_bucket[5m]))",
            "refId": "A",
            "legendFormat": "{{exchange}} - {{endpoint}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth"
            }
          }
        }
      },
      {
        "id": 7,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "type": "timeseries",
        "title": "Database Write Rates",
        "targets": [
          {
            "expr": "rate(wolfinch_influxdb_writes_total[5m])",
            "refId": "A",
            "legendFormat": "InfluxDB"
          },
          {
            "expr": "rate(wolfinch_postgres_writes_total[5m])",
            "refId": "B",
            "legendFormat": "PostgreSQL"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "wps",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 8,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "type": "timeseries",
        "title": "Error Rates",
        "targets": [
          {
            "expr": "rate(wolfinch_api_errors_total[5m])",
            "refId": "A",
            "legendFormat": "API - {{exchange}}"
          },
          {
            "expr": "rate(wolfinch_influxdb_errors_total[5m])",
            "refId": "B",
            "legendFormat": "InfluxDB"
          },
          {
            "expr": "rate(wolfinch_postgres_errors_total[5m])",
            "refId": "C",
            "legendFormat": "PostgreSQL"
          },
          {
            "expr": "rate(wolfinch_kafka_errors_total[5m])",
            "refId": "D",
            "legendFormat": "Kafka"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "eps",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth"
            }
          }
        }
      },
      {
        "id": 9,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "type": "timeseries",
        "title": "Kafka Messages Sent",
        "targets": [
          {
            "expr": "rate(wolfinch_kafka_messages_sent_total[5m])",
            "refId": "A",
            "legendFormat": "{{topic}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "mps",
            "custom": {
              "drawStyle": "bars",
              "fillOpacity": 80
            }
          }
        }
      },
      {
        "id": 10,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
        "type": "timeseries",
        "title": "Candles & Indicators Processed",
        "targets": [
          {
            "expr": "rate(wolfinch_candles_processed_total[5m])",
            "refId": "A",
            "legendFormat": "Candles - {{symbol}}"
          },
          {
            "expr": "rate(wolfinch_indicators_calculated_total[5m])",
            "refId": "B",
            "legendFormat": "Indicators - {{indicator_name}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 11,
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 28},
        "type": "table",
        "title": "Active Alerts",
        "targets": [
          {
            "expr": "ALERTS{alertstate=\"firing\"}",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "alertstate": true},
              "indexByName": {},
              "renameByName": {
                "alertname": "Alert",
                "severity": "Severity",
                "component": "Component"
              }
            }
          }
        ]
      }
    ]
  },
  "overwrite": true
}
